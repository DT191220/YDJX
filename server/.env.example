# 服务器端口
PORT=3001

# 运行环境 (development | production)
NODE_ENV=development

# MySQL数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=yuandong_driving_school

# JWT密钥 (生产环境必须设置强随机值，至少32位)
# 生成方式: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_here

# 前后端通信加密密钥 (与前端保持一致)
ENCRYPT_KEY=your_encrypt_key_here

# 日志配置
LOG_DIR=./logs
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_RETENTION_DAYS=30
LOG_MAX_SIZE_MB=100
